<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Internet</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Tenure status</th>
      <th>Scopus author</th>
      <th>Author position</th>
      <th>Hindex</th>
      <th>Dept</th>
      <th>Dept name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.internet_id %></td>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.tenure_status %></td>
        <td><%= author.scopus_author_id %></td>
        <td><%= author.author_position %></td>
        <td><%= author.hindex %></td>
        <td><%= author.dept_id %></td>
        <td><%= author.dept_name %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

