<% doc_presenter = index_presenter(document) %>
<%# default partial to display solr document fields in catalog index view -%>
<div class="document-metadata row">
 <div class="col-md-12">
   <div class="glyph fs1 pull-right">
            <div class="clearfix">
              <% formaticon = doc_presenter.field_value "docTypeDescription"
                 formaticon = formaticon.gsub(/\s+/, "") %>
                <button type="button" class="btn-no-style" data-toggle="tooltip" data-trigger="click hover" data-placement="bottom" title="<%= doc_presenter.field_value "docTypeDescription" %>"><svg class="icon icon-<%= formaticon %>" aria-hidden="true"><use xlink:href="#icon-<%= formaticon %>"></use></svg><span class="sr-only"> <%= doc_presenter.field_value "docTypeDescription" %></span></button>
            </div>
        </div>
 <p><span class="blacklight-authors"><%= authors_highlight_affiliates(document._source['authors'], document._source['affiliateAuthors']).html_safe  %></p>
 <p class="blacklight-cited"><span class="blacklight-format"><%= doc_presenter.field_value "docTypeDescription" %></span> in <%= doc_presenter.field_value "pubName" %>, <%= doc_presenter.field_value "displayDate" %>. Cited by <%= doc_presenter.field_value "citedByCount" %>.
</p>
</div>
</div>
