<% doc_presenter = index_presenter(document) %>
<%# default partial to display solr document fields in catalog index view -%>
<div class="document-metadata row">
 <div class="col-md-12">
   <div class="glyph fs1 pull-left">
            <div class="clearfix">
              <% formaticon = doc_presenter.field_value "docTypeDescription"
                 formaticon = formaticon.gsub(/\s+/, "") %>
                <svg class="icon icon-<%= formaticon %>" aria-hidden="true"><use xlink:href="#icon-<%= formaticon %>"></use></svg><span class="sr-only"> <%= doc_presenter.field_value "docTypeDescription" %></span>
            </div>
        </div>
 <p><span class="blacklight-authors"><%= doc_presenter.field_value "authors" %></p>
 <p class="blacklight-cited"><span class="blacklight-format"><%= doc_presenter.field_value "docTypeDescription" %></span> in <%= doc_presenter.field_value "pubName" %> on <%= pubdate_formatter(doc_presenter.field_value("pubDate"), '%b %d, %Y') %>
</p>
</div>
</div>
