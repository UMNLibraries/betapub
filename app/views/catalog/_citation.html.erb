<% @documents.each do |document| %>
<% doc_presenter = show_presenter(document) %>
  <h3 class="modal-title"><%= document_heading(document) %></h3>
   <h4>APA</h4>
   <p><%= doc_presenter.field_value "authors" %>
     <%- unless (doc_presenter.field_value "pubDate").empty? %>
      (<%= pubdate_formatter(doc_presenter.field_value "pubDate", "%Y") %> )
      <% end -%>. <%= doc_presenter.field_value "pubTitleDisplay" %>. <i><%= doc_presenter.field_value "pubName" %></i><%- unless (doc_presenter.field_value "volume").empty? %>, <i><%= doc_presenter.field_value "volume" %></i><% end -%><%- unless (doc_presenter.field_value "issue").empty? %>(<%= doc_presenter.field_value "issue" %>)<% end -%><% unless (doc_presenter.field_value "pageRange").empty? %>, <%= doc_presenter.field_value "pageRange" %><% end -%>.</p>

<% end %>
